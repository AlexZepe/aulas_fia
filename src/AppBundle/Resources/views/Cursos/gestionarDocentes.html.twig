{% extends 'layout.html.twig' %} 
{% block body %}
{{ parent() }}
<div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-8">
        <h3>
            {{infoCiclo}}
        </h3>
        <h3>Gestionar Docentes</h3>

        <br/>
        <div class="pull-center">
            <a class="btn btn-success" href="{{ path('cursos_gest_docentes_add', { idCurso: idCur }) }}">Agregar Docente</a>
            <a class="btn btn-danger" href="{{ path('cursos_index') }}">Volver</a>
        </div>

        <br/>
        <table class="table table-striped table-hover">
        <tr>
            <td>Nombre Docente</td>
            <td>Rol en Curso</td>
            <td>Acciones</td>
        </tr>
    {% for docenteIter in docentesList %}
        <tr>
            <td>{{ docenteIter.idempleado.nombreempleado }}</td>
            <td>{{ docenteIter.cargo }}</td>
            <td class="actions">
                <a class="btn btn-default" href="{{ path('cursos_gest_docentes_edit', { 'idCursoDocente': docenteIter.idcursodocente }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                
                <a class="btn btn-default" href="{{ path('cursos_gest_docentes_delete', { 'idCursoDocente': docenteIter.idcursodocente }) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
            </td>
        </tr>
    {% endfor%}
</table>
    </div>
</div>

{% endblock %}