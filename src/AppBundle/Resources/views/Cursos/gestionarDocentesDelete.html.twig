{% extends 'layout.html.twig' %} 
{% block body %}
{{ parent() }}
<div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-8">
        <h3>
            {{infoCiclo}}
        </h3>
        <h3>Eliminar Docente</h3>

        <form class="form-horizontal" role="form" id="formDeleteCursoDocente" method="POST" action="{{path('cursos_delete_curso_docente', { idCursoDocente: idCursoDocente,'idCurso': idCur })}}">
            <div class="form-group">
                <label class="col-lg-2 control-label">Docente</label>
                <div class="col-lg-10">
                    <select class="form-control" required id="empleadoSelect" name="empleadoSelect" disabled>
                        {% for empleadoIter in empleadosList %}
                            <option value="{{empleadoIter.idempleado}}"
                            {% if empleadoIter.idempleado == cursoDocente[0].getIdEmpleado().getIdEmpleado() %}
                            selected
                            {% endif %}>{{empleadoIter.nombreempleado}}</option>
                        {% endfor%}
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Rol en Curso</label>
                <div class="col-lg-10">
                    <select class="form-control" required id="rolEnCursoSelect" name="rolEnCursoSelect" disabled>
                        <option value="Coordinador"
                        {% if "Coordinador" == cursoDocente[0].getCargo() %}
                            selected
                        {% endif %}
                        >Coordinador</option>
                        <option value="Docente"
                        {% if "Docente" == cursoDocente[0].getCargo() %}
                            selected
                        {% endif %}>Docente</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button type="submit" href="{{path('cursos_delete_curso_docente', { 'idCursoDocente': idCursoDocente,'idCurso': idCur})}}" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-primary" href="{{ path('cursos_gest_docentes', { idCurso: idCur }) }}">Volver</a>
                </div>
            </div>
        </form>

        <br/>
    </div>
</div>

{% endblock %}