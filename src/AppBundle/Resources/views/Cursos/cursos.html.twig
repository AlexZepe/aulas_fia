{% extends 'layout.html.twig' %} 
{% block body %}
{{ parent() }}
<nav class="navbar navbar-inverse">
    <div class="container-fluid container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                {% for menuIter in menuList%}	
					<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> {{menuIter.getNombreMenu}}<span class="caret"></span></a>
					<ul class="dropdown-menu">	
						{% for subMenuIter in subMenuList %}
							{% if subMenuIter.getTblmenu().getIdmenu() == menuIter.getIdmenu() %}
								<li><a href="{{ path(subMenuIter.getUrl()) }}">{{ subMenuIter.getNombreSubMenu() }}</a></li>	
							{% endif %}
						{% endfor %}
					</ul>
					</li>	
				{% endfor %} 
                <li class="dropdown">
                    <a href="{{ path('salir') }}" role="button" aria-haspopup="true" aria-expanded="false"> {% trans %} Salir {% endtrans %} </a>
                <li/> 

            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-8">
        <h2>Cursos</h2>
        <br/>
        <form class="form-horizontal" role="form" id="formCursos" method="POST" action="{{path('cursos_find', { idfac: null,idEsc:null,anioCic:null,numCic:null})}}">
            <div class="form-group">
                <label class="col-lg-2 control-label">Facultad</label>
                <div class="col-lg-10">
                    <select class="form-control" required id="facultadSelect" name="facultadSelect">
                        {% for facultadIter in facultades %}
                            <option value="{{facultadIter.idfacultad}}">{{facultadIter.nombrefacultad}}</option>
                        {% endfor%}
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Escuela</label>
                <div class="col-lg-10">
                    <select class="form-control" name="escuelaSelect" required>
                        {% for escuelaIter in escuelas %}
                            <option value="{{escuelaIter.idescuela}}">{{escuelaIter.nombreescuela}}</option>
                        {% endfor%}
                    </select>
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-lg-2 control-label">Año Ciclo</label>
                <div class="col-lg-2">
                    <input type="number" class="form-control" id="anioCicloInput" name="anioCicloInput" required value="{{anioCic}}">
                </div>
                <label class="col-lg-2 control-label">Número Ciclo</label>
                <div class="col-lg-2">
                    <input type="number" class="form-control" id="numCicloInput" name="numCicloInput" required value="{{numCic}}">
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button type="submit" class="btn btn-info">Cargar Cursos</button>
                </div>
            </div>
        </form>
        
        <br/>   
        <div class="pull-center">
            <a class="btn btn-info" href="new">Nuevo Curso</a>
        </div>

        <br/>
        <table class="table table-striped table-hover">
        <tr>
            <td>Curso</td>
            <td>Docentes</td>
            <td>Actividades</td>
            <td>Reporte</td>
        </tr>
    {% for cursoIter in cursosList %}
        <tr>
            <td>{{ cursoIter.idmateria.nombremateria }}</td>
            <td>
                <a href="{{ path('cursos_gest_docentes', { idCurso: cursoIter.idcurso }) }}" class="btn btn-sm btn-info">
                    {{ 'Gestionar Docentes'|trans }}
                </a>
            </td>
            <td>
                <a href="{{ path('cursos_gest_actividades', { idCurso: cursoIter.idcurso }) }}" class="btn btn-sm btn-info">
                    {{ 'Gestionar Actividades'|trans }}
                </a>
            </td>
            <td class="actions">
            </td>
        </tr>
    {% endfor%}
</table>
    </div>
</div>

{% endblock %}