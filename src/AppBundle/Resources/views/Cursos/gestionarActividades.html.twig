{% extends 'layout.html.twig' %} 
{% block body %}
{{ parent() }}
<div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-8">
        
        <h3>
            {{infoCiclo}}
        </h3>
        <h3>Gestionar Actividades</h3>

        <br/>
        <div class="pull-center">
            <a class="btn btn-info" href="{{ path('cursos_gest_actividades_add', { idCurso: idCur}) }}">Nueva Actividad</a>

            <a class="btn btn-info" href="{{ path('cursos_index') }}">Volver</a>
        </div>

        <br/>
        <table class="table table-striped table-hover">
        <tr>
            <td>Actividad</td>
            <td>Aula</td>
            <td>Horario</td>
            <td>Estado</td>
            <td>Acciones</td>
        </tr>
    {% for actividadIter in actividadesList %}
        <tr>
            <td>{{ actividadIter["nombretipoactividad"] }}</td>
            <td>{{ actividadIter["nombreaula"] }}</td>
            <td>{{ actividadIter["horainicio"] }} - {{ actividadIter["horafin"] }}</td>
            <td>{{ actividadIter["nombreestadoactdet"] }}</td>
            <td class="actions">
                <a class="btn btn-default" href="{{ path('cursos_gest_actividades_edit', { 'idCurso': idCur,'idActividad':actividadIter["idactividad"] }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                
                <a class="btn btn-default" href="{{ path('cursos_gest_actividades_delete', { 'idCurso': idCur,'idActividad':actividadIter["idactividad"] }) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
            </td>
        </tr>
    {% endfor%}
        </table>
    </div>
</div>

{% endblock %}