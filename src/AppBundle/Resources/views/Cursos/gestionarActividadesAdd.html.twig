{% extends 'layout.html.twig' %} 
{% block body %}
{{ parent() }}
<div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-8">
        
        <h3>
            {{infoCiclo}}
        </h3>
        <h3>Nueva Actividad</h3>

        <form class="form-horizontal" role="form" id="formAddCursoDocente" method="POST" action="{{path('cursos_add_actividad', { idCurso: idCur })}}">
            <div class="form-group">
                <label class="col-lg-2 control-label">Tipo Actividad</label>
                <div class="col-lg-10">
                    <select class="form-control" required id="tiposActividadSelect" name="tiposActividadSelect">
                        {% for tipoActividadIter in tiposActividadesList %}
                            <option value="{{tipoActividadIter.idtipoactividad}}">{{tipoActividadIter.nombretipoactividad}}</option>
                        {% endfor%}
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Número Actividad</label>
                <div class="col-lg-10">
                    <input type="number" id="numActividadInput" name="numActividadInput" required>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Fecha Actividad</label>
                <div class="col-lg-10">
                    <input type="date" id="fechaActividadInput" name="fechaActividadInput" required>
                </div>
            </div>

            <!--div class="form-group">
                <label class="col-lg-2 control-label">Día Actividad</label>
                <div class="col-lg-10">
                    <select class="form-control" required id="diaActividadSelect" name="diaActividadSelect">
                        <option value="LUNES">LUNES</option>
                        <option value="MARTES">MARTES</option>
                        <option value="MIERCOLES">MIERCOLES</option>
                        <option value="JUEVES">JUEVES</option>
                        <option value="VIERNES">VIERNES</option>
                        <option value="SABADO">SABADO</option>
                        <option value="DOMINGO">DOMINGO</option>
                    </select>
                </div>
            </div-->

            <div class="form-group">
                <label class="col-lg-2 control-label">Hora Inicio</label>
                <div class="col-lg-10">
                    <select class="form-control" required id="horaInicioActSelect" name="horaInicioActSelect">
                        <option value="06:20">06:20</option>
                        <option value="08:05">08:05</option>
                        <option value="09:50">09:50</option>
                        <option value="11:35">11:35</option>
                        <option value="13:20">13:20</option>
                        <option value="15:05">15:05</option>
                        <option value="16:50">16:50</option>
                        <option value="18:35">18:35</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Hora Fin</label>
                <div class="col-lg-10">
                    <select class="form-control" required id="horaFinActSelect" name="horaFinActSelect">
                        <option value="08:00">08:00</option>
                        <option value="09:45">09:45</option>
                        <option value="11:30">11:30</option>
                        <option value="13:15">13:15</option>
                        <option value="15:00">15:00</option>
                        <option value="16:45">16:45</option>
                        <option value="18:30">18:30</option>
                        <option value="20:15">20:15</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Aula</label>
                <div class="col-lg-10">
                    <select class="form-control" required id="aulaSelect" name="aulaSelect">
                        {% for aulaIter in aulasList %}
                            <option value="{{aulaIter.idaula}}">{{aulaIter.nombreaula}}</option>
                        {% endfor%}
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button type="submit" class="btn btn-info">Guardar</button>
                    
                    <a class="btn btn-info" href="{{ path('cursos_gest_actividades', { idCurso: idCur}) }}">Volver</a>
                </div>
            </div>
        </form>
        </div>
    </div>
</div>

{% endblock %}