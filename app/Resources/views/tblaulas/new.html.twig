{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <h1 class="text-center">Nueva Aula</h1>
                <br/>
                {{ form_start(form, { 'attr': {'novalidate':'novalidate', 'class': 'form-horizontal', 'role':'form'} }) }}

                <div class="form-group">
                    {{ form_label(form.nombreaula, 'Nombre', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.nombreaula, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(form.nombreaula) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.capacidadaula, 'Capacidad', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.capacidadaula, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(form.capacidadaula) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.idestadoaula, 'Estado', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.idestadoaula, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(form.idestadoaula) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.idtipoaula, 'TipoAula', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.idtipoaula, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(form.idtipoaula) }}</span>                        
                    </div>
                </div>

                
                <div class="text-right">
                    <input class="btn btn-success" type="submit" value="Guardar">
                </div>
                {{ form_end(form) }}
                

            </div>
            <div class="col-md-2"></div>
        </div>
    </div>

{% endblock %}



















