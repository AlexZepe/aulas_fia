
{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <h1 class="text-center">Detalle Aulas</h1>

                <br/>
                <form class="form-horizontal" role="form">

                    <div class="form-group">                     
                        <label class="col-sm-2 control-label">Nombre</label>
                        <div class="col-sm-10">
                            <label class="form-control">{{ tblAula.nombreaula }}</label>
                        </div>
                    </div>

                    <div class="form-group">                     
                        <label class="col-sm-2 control-label">Capacidad del aula</label>
                        <div class="col-sm-10">
                            <label class="form-control">{{ tblAula.capacidadaula }}</label>
                        </div>
                    </div>

                    <div class="form-group">                     
                        <label class="col-sm-2 control-label">Estado</label>
                        <div class="col-sm-10">
                            <label class="form-control">{{ tblAula.idestadoaula.nombreestadoaula }}</label>
                        </div>
                    </div>   
                    
                    <div class="form-group">                     
                        <label class="col-sm-2 control-label">Estado</label>
                        <div class="col-sm-10">
                            <label class="form-control">{{ tblAula.idtipoaula.nombretipoaula }}</label>
                        </div>
                    </div>

                </form>         
                
                <div class="text-right">
                    <input class="btn btn-success" type="submit" onclick="window.close()" value="Regresar">
                </div>

            </div>
            <div class="col-md-2"></div>
        </div>
    </div>

{% endblock %}















