{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">

                <h1 class="text-center">Editar Escuela</h1><br/>

                {{ form_start(edit_form, { 'attr': {'novalidate':'novalidate', 'class': 'form-horizontal', 'role':'form'} }) }}

                <div class="form-group">
                    {{ form_label(edit_form.nombreescuela, 'Nombre', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.nombreescuela, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(edit_form.nombreescuela) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.siglasescuela, 'Siglas', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.siglasescuela, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(edit_form.siglasescuela) }}</span>                        
                    </div>
                </div>                

                <div class="form-group">
                    {{ form_label(edit_form.idfacultad, 'Facultad', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.idfacultad, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(edit_form.idfacultad) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.descripcionescuela, 'Descripci√≥n', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.descripcionescuela, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(edit_form.descripcionescuela) }}</span>                        
                    </div>
                </div>

                <div class="text-right">
                    <input class="btn btn-success" type="submit" value="Guardar">
                </div>

                {{ form_end(edit_form) }}


            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
    
{% endblock %}
