{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">

                <h1 class="text-center">Nueva Escuela</h1><br/>

                {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role':'form'} }) }}

                <div class="form-group">
                    {{ form_label(form.nombreescuela, 'Nombre', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.nombreescuela, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.siglasescuela, 'Siglas', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.siglasescuela, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>                

                <div class="form-group">
                    {{ form_label(form.idfacultad, 'Facultad', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.idfacultad, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.descripcionescuela, 'Descripci√≥n', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.descripcionescuela, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

                <div class="text-right">
                    <input class="btn btn-success" type="submit" value="Guardar">
                </div>

                {{ form_end(form) }}


            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
    
{% endblock %}
