{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h1 class="text-center">Nuevo Ciclo</h1>
            <br/>
            {{ form_start(form, { 'attr': {'novalidate':'novalidate', 'class': 'form-horizontal', 'role':'form'} }) }}

                <div class="form-group">
                    {{ form_label(form.aniociclo, 'Año', { 'label_attr': {'class': 'col-sm-3 control-label'} }) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.aniociclo, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(form.aniociclo) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.numerociclo, 'Número de Ciclo', { 'label_attr': {'class': 'col-sm-3 control-label'} }) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.numerociclo, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(form.numerociclo) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.fechainicio, 'Fecha Inicio', { 'label_attr': {'class': 'col-sm-3 control-label'} }) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.fechainicio) }} 
                        <span class="text-danger" >{{ form_errors(form.fechainicio) }}</span>                       
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.fechafin, 'Fecha Fin', { 'label_attr': {'class': 'col-sm-3 control-label'} }) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.fechafin) }}
                        <span class="text-danger" >{{ form_errors(form.fechafin) }}</span>                        
                    </div>
                </div>
                <div class="text-right">
                    <input class="btn btn-success" type="submit" value="Guardar">
                </div>

            {{ form_end(form) }}
 

<!--JAVASCRIPT PARA POPUP Y DATATABLES-->
  {% block javascripts %}
    {{ parent() }}
      
      <script type="text/javascript">
            $(document).ready(function () {
                
                $('.calendario').datepicker({
                    format: "yyyy-mm-dd"
                });  
            
            });
        </script>
      
  {% endblock %}

{% endblock %}
