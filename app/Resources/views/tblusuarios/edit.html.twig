{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h1 class="text-center">Editar Usuario</h1>
            <br/>
            {{ form_start(edit_form, { 'attr': {'class': 'form-horizontal', 'role':'form'} }) }}

                <div class="form-group">
                    {{ form_label(edit_form.nombreusuario, 'Nombre', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.nombreusuario, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.usuario, 'Usuario', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.usuario, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.password, 'Contrase√±a', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.password, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

               
                <div class="form-group">
                    {{ form_label(edit_form.fechaalta, 'Fecha de Alta', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.fechaalta) }}                        
                    </div>
                </div>

               <div class="hide">
                    <div class="form-group">
                        {{ form_label(edit_form.vigencia, 'Vigencia', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.vigencia, { 'attr': {'class': 'form-control'} }) }}                        
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.estatus, 'Estatus', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.estatus, { 'attr': {'class': 'form-control'} }) }}                        
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.fechaestatus, 'Fecha de Estatus', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.fechaestatus) }}                        
                        </div>
                    </div>
                </div>

                 <div class="hide">
                    <div class="form-group">
                        {{ form_label(edit_form.idperfil, 'Perfiles', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.idperfil) }}                        
                        </div>
                    </div>
                </div>

                <div class="text-right">
                    <input class="btn btn-success" type="submit" value="Guardar">
                </div>

            {{ form_end(edit_form) }}
            

        </div>
        <div class="col-md-2"></div>
    </div>
</div>
<!--JAVASCRIPT PARA POPUP Y DATATABLES-->
  {% block javascripts %}
    {{ parent() }}
      
      <script type="text/javascript">
            $(document).ready(function () {
                
                $('.calendario').datepicker({
                    format: "yyyy-mm-dd"
                });  
            
            });
        </script>
      
  {% endblock %}
{% endblock %}
