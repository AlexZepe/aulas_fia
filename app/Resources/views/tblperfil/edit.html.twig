{% extends 'base.html.twig' %}

{% block body %}
     <div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h1 class="text-center">Editar Perfil</h1>
            <br/>
            {{ form_start(edit_form, { 'attr': {'novalidate':'novalidate', 'class': 'form-horizontal', 'role':'form'} }) }}

            <div class="form-group">
                {{ form_label(edit_form.nombreperfil, 'Nombre', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.nombreperfil, { 'attr': {'class': 'form-control'} }) }}
                    <span class="text-danger" >{{ form_errors(edit_form.nombreperfil) }}</span>                        
                </div>
            </div>

            <div class="form-group">
                {{ form_label(edit_form.fechaalta, 'Fecha de Alta', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.fechaalta) }}
                    <span class="text-danger" >{{ form_errors(edit_form.fechaalta) }}</span>                        
                </div>
            </div>

            <div class="form-group">
                {{ form_label(edit_form.descripcion, 'Descripci√≥n', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.descripcion, { 'attr': {'class': 'form-control'} }) }}
                    <span class="text-danger" >{{ form_errors(edit_form.descripcion) }}</span>                        
                </div>
            </div>

            <div class="text-right">
                <input class="btn btn-success" type="submit" value="Guardar">
            </div>

            {{ form_end(edit_form) }}
            

        </div>
        <div class="col-md-2"></div>
    </div>
</div>
<!--JAVASCRIPT PARA POPUP Y DATATABLES-->
{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {

            $('.calendario').datepicker({
                format: "yyyy-mm-dd"
            });  
            
        });
    </script>

{% endblock %}

{% endblock %}
