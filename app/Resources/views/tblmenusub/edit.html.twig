{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <h1 class="text-center">Editar Sub Menu</h1>
                <br/>
                {{ form_start(edit_form, { 'attr': {'class': 'form-horizontal', 'role':'form'} }) }}

                <div class="form-group">
                    {{ form_label(edit_form.nombresubmenu, 'Nombre', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.nombresubmenu, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.url, 'Url', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.url, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.fechaalta, 'Fecha de Alta', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.fechaalta) }}                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.idmenu, 'Menu Padre', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.idmenu, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

                <div class="text-right">
                    <input class="btn btn-success" type="submit" value="Guardar">
                </div>

                {{ form_end(edit_form) }}
                

            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
    <!--JAVASCRIPT PARA POPUP Y DATATABLES-->
    {% block javascripts %}
        {{ parent() }}

        <script type="text/javascript">
            $(document).ready(function () {

                $('.calendario').datepicker({
                    format: "yyyy-mm-dd"
                });  

            });
        </script>

    {% endblock %}
{% endblock %}

