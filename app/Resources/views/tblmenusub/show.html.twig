{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h1 class="text-center">Detalle Sub Menu</h1>

            <br/>
            <form class="form-horizontal" role="form">

                <div class="form-group">                     
                    <label class="col-sm-2 control-label">Id</label>
                    <div class="col-sm-10">
                        <label class="form-control">{{ tblMenusub.idsubmenu }}</label>
                    </div>
                </div>

                <div class="form-group">                     
                    <label class="col-sm-2 control-label">Nombre</label>
                    <div class="col-sm-10">
                        <label class="form-control">{{ tblMenusub.nombresubmenu }}v</label>
                    </div>
                </div>

                <div class="form-group">                     
                    <label class="col-sm-2 control-label">Url</label>
                    <div class="col-sm-10">
                        <label class="form-control">{{ tblMenusub.url }}</label>
                    </div>
                </div>

                <div class="form-group">                     
                    <label class="col-sm-2 control-label">Fecha de Alta</label>
                    <div class="col-sm-10">
                        <label class="form-control">{% if tblMenusub.fechaalta %}{{ tblMenusub.fechaalta|date('Y-m-d') }}{% endif %}</label>
                    </div>
                </div>

                <div class="form-group">                     
                    <label class="col-sm-2 control-label">Menu Padre</label>
                    <div class="col-sm-10">
                        <label class="form-control">{{ tblMenusub.idmenu }}</label>
                    </div>
                </div>
                
            </form>         
            
            <div class="text-right">
                    <input class="btn btn-success" type="submit" onclick="window.close()" value="Regresar">
            </div>

        </div>
        <div class="col-md-2"></div>
    </div>
</div>
    
{% endblock %}
