{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <h1 class="text-center">Nueva Carrera</h1>
                <br/>
                {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role':'form'} }) }}

                <div class="form-group">
                    {{ form_label(form.nombrecarrera, 'Nombre', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.nombrecarrera, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.codigocarrera, 'Código', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.codigocarrera, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.descripcioncarrera, 'Descripción', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.descripcioncarrera, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.idescuela, 'Escuela', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.idescuela, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                </div>

                <div class="text-right">
                    <input class="btn btn-success" type="submit" value="Guardar">
                </div>

                {{ form_end(form) }}
                

            </div>
            <div class="col-md-2"></div>
        </div>
    </div>   
{% endblock %}
