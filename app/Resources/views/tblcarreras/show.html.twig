{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <h1 class="text-center">Detalle Carrera</h1>

                <br/>
                <form class="form-horizontal" role="form">

                   <div class="form-group">                     
                        <label class="col-sm-2 control-label">Nombre</label>
                        <div class="col-sm-10">
                            <label class="form-control">{{ tblCarrera.nombrecarrera }}</label>
                        </div>
                    </div>

                    <div class="form-group">                     
                        <label class="col-sm-2 control-label">Código</label>
                        <div class="col-sm-10">
                            <label class="form-control">{{ tblCarrera.codigocarrera }}</label>
                        </div>
                    </div>

                    <div class="form-group">                     
                        <label class="col-sm-2 control-label">Escuela</label>
                        <div class="col-sm-10">
                            <label class="form-control">{{ tblCarrera.idescuela.nombreescuela }}</label>
                        </div>
                    </div>

                    <div class="form-group">                     
                        <label class="col-sm-2 control-label">Descripción</label>
                        <div class="col-sm-10">
                            <label class="form-control">{{ tblCarrera.descripcioncarrera }}</label>
                        </div>
                    </div>
                    
                </form>         
                
                <div class="text-right">
                    <input class="btn btn-success" type="submit" onclick="window.close()" value="Regresar">
                </div>

            </div>
            <div class="col-md-2"></div>
        </div>
    </div>

{% endblock %}
