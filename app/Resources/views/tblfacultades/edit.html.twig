        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <h1 class="text-center">Editar Facultad</h1>
                <br/>
                {{ form_start(edit_form, { 'attr': {'novalidate':'novalidate', 'class': 'form-horizontal', 'role':'form'} }) }}

                <div class="form-group">
                    {{ form_label(edit_form.nombrefacultad, 'Nombre', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.nombrefacultad, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(edit_form.nombrefacultad) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.siglasfacultad, 'Siglas', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.siglasfacultad, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(edit_form.siglasfacultad) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.descripcionfacultad, 'Descripci√≥n', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.descripcionfacultad, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(edit_form.descripcionfacultad) }}</span>                        
                    </div>
                </div>

                <div class="text-right">
                    <input class="btn btn-success" type="submit" value="Guardar">
                </div>

                {{ form_end(edit_form) }}
                

            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
{% endblock %}
