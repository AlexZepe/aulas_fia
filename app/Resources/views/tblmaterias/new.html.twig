{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h1 class="text-center">Nueva Materia</h1>
            <br/>
            {{ form_start(form, { 'attr': {'novalidate':'novalidate', 'class': 'form-horizontal', 'role':'form'} }) }}

                <div class="form-group">
                    {{ form_label(form.codigomateria, 'Código', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.codigomateria, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(form.codigomateria) }}</span>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.nombremateria, 'Nombre', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.nombremateria, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(form.nombremateria) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.descripcionmateria, 'Descripción', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.descripcionmateria, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(form.descripcionmateria) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.idescuela, 'Escuela', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.idescuela, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(form.idescuela) }}</span>                        
                    </div>
                </div>

                <div class="text-right">
                    <input class="btn btn-success" type="submit" value="Guardar">
                </div>

            {{ form_end(form) }}
            

        </div>
        <div class="col-md-2"></div>
    </div>
</div>

{% endblock %}
