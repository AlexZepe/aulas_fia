{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <h1 class="text-center">Editar Materia</h1>
                <br/>
                {{ form_start(edit_form, { 'attr': {'novalidate':'novalidate', 'class': 'form-horizontal', 'role':'form'} }) }}

                <div class="form-group">
                    {{ form_label(edit_form.codigomateria, 'Código', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.codigomateria, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(edit_form.codigomateria) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.nombremateria, 'Nombre', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.nombremateria, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(edit_form.nombremateria) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.descripcionmateria, 'Descripción', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.descripcionmateria, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(edit_form.descripcionmateria) }}</span>                        
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.idescuela, 'Escuela', { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.idescuela, { 'attr': {'class': 'form-control'} }) }}
                        <span class="text-danger" >{{ form_errors(edit_form.idescuela) }}</span>                        
                    </div>
                </div>

                <div class="text-right">
                    <input class="btn btn-success" type="submit" value="Guardar">
                </div>

                {{ form_end(edit_form) }}
                

            </div>
            <div class="col-md-2"></div>
        </div>
    </div>

{% endblock %}
