{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h1 class="text-center">Detalle Empleado</h1>

            <br/>
            <form class="form-horizontal" role="form">
                
                <div class="form-group">                     
                    <label class="col-sm-2 control-label">Nombre</label>
                    <div class="col-sm-10">
                        <label class="form-control">{{ tblEmpleado.nombreempleado }}</label>
                    </div>
                </div>

                <div class="form-group">                     
                    <label class="col-sm-2 control-label">Fecha Ingreso</label>
                    <div class="col-sm-10">
                        <label class="form-control">{% if tblEmpleado.fechaingreso %}{{ tblEmpleado.fechaingreso|date('Y-m-d') }}{% endif %}</label>
                    </div>
                </div>

                <div class="form-group">                     
                    <label class="col-sm-2 control-label">Puesto</label>
                    <div class="col-sm-10">
                        <label class="form-control">{{ tblEmpleado.idpuesto.nombrepuesto }}</label>
                    </div>
                </div>
                
            </form>         
            
            <div class="text-right">
                    <input class="btn btn-success" type="submit" onclick="window.close()" value="Regresar">
            </div>

        </div>
        <div class="col-md-2"></div>
    </div>
</div>

   
{% endblock %}
